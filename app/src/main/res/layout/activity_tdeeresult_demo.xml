<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tai.tdeecalculatordemo.TDEEResultDemo">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="13">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/bmiclipart"
        android:layout_weight="3"/>
    <TextView
            android:id="@+id/userbmi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1.5"
            android:text="21.0"
            android:textSize="36sp"
            android:textAlignment="center" />
    <TextView
            android:id="@+id/bmirec"
            android:alpha="0.7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:text="asdf';kl/;KJ/.,M./,VMO/;LF/D.,BM'./,mfg./asg"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/fireclipart" />
    <TextView
            android:id="@+id/usercalrec"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1.5"
            android:text="2100 kcal/day"
            android:textSize="36sp"
            android:textAlignment="center" />
    <TextView
            android:id="@+id/tdeeinfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:alpha="0.7"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="asdf';kl/;KJ/.,M./,VMO/;LF/D.,BM'./,mfg./asg"/>
</LinearLayout>




</android.support.constraint.ConstraintLayout>
